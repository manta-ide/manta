    <node id="graph-data-management" title="Graph Data Management" x="500" y="700" z="0">
      <description>Handles graph persistence, XML serialization, diff calculation, and state synchronization between current and built graphs. Manages optimistic updates, real-time collaboration, and version control for graph structures.</description>
      <props>
        <prop name="storage-format" title="Storage Format" type="select">
          <value>XML</value>
          <options>
          <option>XML</option>
          <option>JSON</option>
          <option>YAML</option>
          <option>Binary</option>
          </options>
        </prop>
        <prop name="auto-save-interval" title="Auto-save Interval (ms)" type="number">2000</prop>
        <prop name="version-control" title="Version Control" type="boolean">true</prop>
        <prop name="optimistic-updates" title="Optimistic Updates" type="boolean">true</prop>
        <prop name="conflict-resolution" title="Conflict Resolution" type="select">
          <value>Last Write Wins</value>
          <options>
          <option>Last Write Wins</option>
          <option>Manual Merge</option>
          <option>Auto Merge</option>
          <option>Version Branches</option>
          </options>
        </prop>
        <prop name="compression-enabled" title="Data Compression" type="boolean">false</prop>
        <prop name="backup-strategy" title="Backup Configuration" type="object">
        <field name="enabled" title="Enable Backups" type="boolean">true</field>
        <field name="frequency" title="Backup Frequency" type="select">
          <value>daily</value>
          <options>
          <option>hourly</option>
          <option>daily</option>
          <option>weekly</option>
          <option>manual</option>
          </options>
        </field>
        <field name="retention-days" title="Retention (days)" type="number">30</field>
        <field name="location" title="Backup Location" type="select">
          <value>local</value>
          <options>
          <option>local</option>
          <option>cloud</option>
          <option>both</option>
          </options>
        </field>
      </prop>
        <prop name="graph-data-management-real-time-sync" title="Real-time Sync" type="boolean">true</prop>
      </props>
    </node>

    <node id="claude-code-integration" title="Claude Code Integration" x="900" y="700" z="0">
      <description>Orchestrates AI-powered code generation and editing through Claude Code CLI. Handles tool selection, execution context, permission management, and streaming responses for intelligent development assistance.</description>
      <props>
        <prop name="execution-mode" title="Execution Mode" type="select">
          <value>Interactive</value>
          <options>
          <option>Interactive</option>
          <option>Automatic</option>
          <option>Planning Only</option>
          <option>Review Required</option>
          </options>
        </prop>
        <prop name="permission-level" title="Permission Level" type="select">
          <value>Accept Edits</value>
          <options>
          <option>Bypass Permissions</option>
          <option>Accept Edits</option>
          <option>Default Prompts</option>
          <option>Plan Mode</option>
          </options>
        </prop>
        <prop name="model-selection" title="AI Model" type="select">
          <value>claude-3-5-sonnet-20241022</value>
          <options>
          <option>claude-3-5-sonnet-20241022</option>
          <option>claude-3-5-haiku-20241022</option>
          <option>claude-3-opus-20240229</option>
          </options>
        </prop>
        <prop name="max-turns" title="Max Conversation Turns" type="number">20</prop>
        <prop name="timeout-settings" title="Timeout Configuration" type="object">
        <field name="request-timeout" title="Request Timeout (ms)" type="number">30000</field>
        <field name="streaming-timeout" title="Streaming Timeout (ms)" type="number">60000</field>
        <field name="tool-timeout" title="Tool Execution Timeout (ms)" type="number">10000</field>
      </prop>
        <prop name="tool-restrictions" title="Allowed Tools" type="object-list">
        <item index="0">
          <field name="tool" title="Tool Name" type="text">mcp__graph-tools__read</field>
        </item>
        <item index="1">
          <field name="tool" title="Tool Name" type="text">mcp__graph-tools__node_create</field>
        </item>
        <item index="2">
          <field name="tool" title="Tool Name" type="text">mcp__graph-tools__node_edit</field>
        </item>
        <item index="3">
          <field name="tool" title="Tool Name" type="text">Read</field>
        </item>
        <item index="4">
          <field name="tool" title="Tool Name" type="text">Grep</field>
        </item>
      </prop>
        <prop name="streaming-enabled" title="Enable Streaming" type="boolean">true</prop>
        <prop name="thinking-tokens" title="Max Thinking Tokens" type="number">0</prop>
      </props>
    </node>
  </nodes>

