        </item>
        <item index="1">
          <field name="method" title="HTTP Method" type="select">
          <value></value>
          <options>
          <option>GET</option>
          <option>POST</option>
          <option>PUT</option>
          <option>DELETE</option>
          <option>OPTIONS</option>
          <option>PATCH</option>
          </options>
        </field>
        </item>
        <item index="2">
          <field name="method" title="HTTP Method" type="select">
          <value></value>
          <options>
          <option>GET</option>
          <option>POST</option>
          <option>PUT</option>
          <option>DELETE</option>
          <option>OPTIONS</option>
          <option>PATCH</option>
          </options>
        </field>
