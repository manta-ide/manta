<?xml version="1.0" encoding="UTF-8"?>
<graph xmlns="urn:app:graph" version="1.0" directed="true">
  <nodes>
    <node id="graph-visualization-system" title="Graph Visualization System" x="100" y="100" z="0">
      <description>The core graph visualization engine powered by ReactFlow, providing an interactive canvas for creating, editing, and navigating component graphs. Handles visual rendering, layout algorithms, zoom controls, and real-time graph synchronization.</description>
      <props>
        <prop name="layout-algorithm" title="Layout Algorithm" type="select">
          <value>ELK Layered</value>
          <options>
          <option>ELK Layered</option>
          <option>Force Directed</option>
          <option>Hierarchical</option>
          <option>Grid</option>
          <option>Circular</option>
          </options>
        </prop>
        <prop name="zoom-behavior" title="Zoom Behavior" type="select">
          <value>Pinch and Scroll</value>
          <options>
          <option>Pinch and Scroll</option>
          <option>Scroll Only</option>
          <option>Button Controls</option>
          <option>Disabled</option>
          </options>
        </prop>
        <prop name="pan-mode" title="Pan Interaction Mode" type="select">
          <value>Right Click Drag</value>
          <options>
          <option>Right Click Drag</option>
          <option>Two Finger Pan</option>
          <option>Middle Mouse</option>
          <option>Left Click Drag</option>
          </options>
        </prop>
        <prop name="node-styling" title="Node Visual Styling" type="object">
        <field name="background-color" title="Background Color" type="color">#ffffff</field>
        <field name="border-radius" title="Border Radius (px)" type="number">8px</field>
        <field name="shadow-enabled" title="Drop Shadow" type="boolean">true</field>
        <field name="selection-highlight" title="Selection Color" type="color">#2563eb</field>
      </prop>
        <prop name="canvas-theme" title="Canvas Theme" type="select">
          <value>Dark Mode</value>
          <options>
          <option>Dark Mode</option>
          <option>Light Mode</option>
          <option>Auto</option>
          <option>High Contrast</option>
          </options>
        </prop>
        <prop name="minimap-enabled" title="Show Minimap" type="boolean">true</prop>
        <prop name="controls-position" title="Controls Position" type="select">
          <value>Bottom Right</value>
          <options>
          <option>Bottom Right</option>
          <option>Bottom Left</option>
          <option>Top Right</option>
          <option>Top Left</option>
          <option>Hidden</option>
          </options>
        </prop>
        <prop name="connection-mode" title="Connection Creation" type="select">
          <value>Loose Handles</value>
          <options>
          <option>Loose Handles</option>
          <option>Strict Handles</option>
          <option>Auto Connect</option>
          <option>Disabled</option>
          </options>
        </prop>
        <prop name="real-time-sync" title="Real-time Synchronization" type="boolean">true</prop>
      </props>
    </node>

    <node id="property-editor-suite" title="Property Editor Suite" x="500" y="100" z="0">
      <description>A comprehensive collection of property editors supporting various input types (color, text, number, select, boolean, slider, object, etc.). Provides real-time editing with debounced backend updates and visual feedback for component customization.</description>
      <props>
        <prop name="editor-theme" title="Editor Theme" type="select">
          <value>Dark</value>
          <options>
          <option>Dark</option>
          <option>Light</option>
          <option>Auto</option>
          <option>High Contrast</option>
          </options>
        </prop>
        <prop name="debounce-delay" title="Update Delay (ms)" type="number">500</prop>
        <prop name="preview-mode" title="Live Preview" type="boolean">true</prop>
        <prop name="validation-enabled" title="Input Validation" type="boolean">true</prop>
        <prop name="compact-layout" title="Compact Layout" type="boolean">false</prop>
        <prop name="editor-styling" title="Editor Visual Style" type="object">
        <field name="background-color" title="Background Color" type="color">#18181b</field>
        <field name="border-color" title="Border Color" type="color">#3f3f46</field>
        <field name="text-color" title="Text Color" type="color">#ffffff</field>
        <field name="accent-color" title="Accent Color" type="color">#3b82f6</field>
      </prop>
        <prop name="auto-save" title="Auto-save Changes" type="boolean">true</prop>
        <prop name="undo-history" title="Undo History Depth" type="number">20</prop>
      </props>
    </node>

    <node id="ai-chat-interface" title="AI Chat Interface" x="900" y="100" z="0">
      <description>A floating, draggable chat interface for AI-powered assistance. Provides contextual help with file content, graph nodes, and selections. Features markdown rendering, message history, and intelligent context inclusion.</description>
      <props>
        <prop name="initial-position" title="Initial Position" type="select">
          <value>Bottom Left</value>
          <options>
          <option>Bottom Left</option>
          <option>Bottom Right</option>
          <option>Top Left</option>
          <option>Top Right</option>
          <option>Center</option>
          </options>
        </prop>
        <prop name="chat-styling" title="Chat Window Style" type="object">
        <field name="width" title="Window Width (px)" type="number">288</field>
        <field name="max-height" title="Max Height" type="text">60vh</field>
        <field name="background-color" title="Background Color" type="color">#111827</field>
        <field name="border-color" title="Border Color" type="color">#374151</field>
        <field name="border-radius" title="Border Radius (px)" type="number">6</field>
      </prop>
        <prop name="message-history" title="Message History Limit" type="number">50</prop>
        <prop name="auto-context" title="Auto-include Context" type="boolean">true</prop>
        <prop name="markdown-rendering" title="Markdown Support" type="boolean">true</prop>
        <prop name="typing-animation" title="Typing Animation" type="boolean">true</prop>
        <prop name="draggable-window" title="Draggable Window" type="boolean">true</prop>
        <prop name="minimize-enabled" title="Allow Minimize" type="boolean">true</prop>
        <prop name="streaming-responses" title="Streaming Responses" type="boolean">true</prop>
      </props>
    </node>

    <node id="project-management-system" title="Project Management System" x="300" y="400" z="0">
      <description>Handles project initialization, file system operations, template installation, and project status tracking. Manages NextJS project detection, partial template installation, and dynamic agent generation.</description>
      <props>
        <prop name="auto-install-templates" title="Auto-install Templates" type="boolean">true</prop>
        <prop name="project-detection" title="Project Type Detection" type="select">
          <value>Automatic</value>
          <options>
          <option>Automatic</option>
          <option>Manual</option>
          <option>Disabled</option>
          </options>
        </prop>
        <prop name="file-watching" title="File System Watching" type="boolean">true</prop>
        <prop name="template-branches" title="Available Templates" type="object-list">
        <item index="0">
          <field name="name" title="Template Name" type="text">Partial Template</field>
          <field name="branch" title="Git Branch" type="text">partial</field>
          <field name="description" title="Description" type="text">Sample components for existing projects</field>
        </item>
        <item index="1">
          <field name="name" title="Template Name" type="text">Full Template</field>
          <field name="branch" title="Git Branch" type="text">main</field>
          <field name="description" title="Description" type="text">Complete starter project</field>
        </item>
      </prop>
        <prop name="status-checking" title="Status Check Interval" type="select">
          <value>On Demand</value>
          <options>
          <option>On Demand</option>
          <option>Every 5 minutes</option>
          <option>Every 15 minutes</option>
          <option>Disabled</option>
          </options>
        </prop>
        <prop name="agent-generation" title="Dynamic Agent Generation" type="boolean">true</prop>
        <prop name="backup-enabled" title="Project Backup" type="boolean">false</prop>
      </props>
    </node>

    <node id="api-orchestration-layer" title="API Orchestration Layer" x="700" y="400" z="0">
      <description>Backend API system managing graph operations, file handling, chat requests, and Claude Code integration. Provides RESTful endpoints with real-time updates via Server-Sent Events and MCP tool integration.</description>
      <props>
