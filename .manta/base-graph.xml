          <value>v1</value>
          <options>
          <option>v1</option>
          <option>v2</option>
          <option>beta</option>
          </options>
        </prop>
        <prop name="rate-limiting" title="Rate Limiting" type="boolean">false</prop>
        <prop name="request-timeout" title="Request Timeout (ms)" type="number">30000</prop>
        <prop name="sse-enabled" title="Server-Sent Events" type="boolean">true</prop>
        <prop name="error-handling" title="Error Response Format" type="select">
          <value>Detailed</value>
          <options>
          <option>Detailed</option>
          <option>Simple</option>
          <option>Development Only</option>
          </options>
        </prop>
        <prop name="cors-settings" title="CORS Configuration" type="object">
        <field name="enabled" title="CORS Enabled" type="boolean">true</field>
        <field name="origins" title="Allowed Origins" type="object-list">
        <item index="0">
          <field name="origin" title="Origin" type="text"></field>
        </item>
